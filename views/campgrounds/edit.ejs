<% include ../partials/header %>
<div class="container">
	<h1 style="text-align:center">
		Edit <%= campground.name %>
	</h1>
	
	<div style="width:30%; margin: 30px auto;">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<input type="text" name="campround[name]" value="<%= campground.name %>" class="form-control">	
			</div>
			<div class="form-group">
				<input type="number" name="campround[price]" value="<%= campground.price %>" class="form-control">	
			</div>	
			<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
            </div>
			<div class="form-group">
				<input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control">
			</div>			
			<div class="form-group">
				<button class="btn btn-primary btn-block">
			Submit!!!
			</button>
			</div>
			<div class="form-group">
				<a href="/campgrounds">Go to back</a>
			</div>
		</form>	
	</div>
</div>


<% include ../partials/footer %>